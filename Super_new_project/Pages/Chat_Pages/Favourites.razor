@page "/chat_pages/favourites"
@inject NavigationManager NavigationManager

<div class="column-layout favourites-container">
    <div class="row-layout topbar">
        <div class="row-layout group">
            <div class="row-layout round-icon-button-1">
                <IgbNavDrawer @onclick="@(e => _navDrawer12!.ToggleAsync())" @ref="_navDrawer12" class="nav-drawer" favourites-scope>
                    <div class="row-layout group">
                        <div class="row-layout round-icon-button-1">
                            <span class="material-icons icon">
                                menu
                            </span>
                        </div>
                        <div @onclick="@(e => Navigate("/dashboard/search_engine"))" class="row-layout group_1">
                            <img src="assets/gchat monogram.svg" class="image" />
                        </div>
                    </div>
                    <div class="column-layout group_2">
                        <div class="column-layout group_3">
                            <div class="column-layout group_4">
                                <div class="row-layout group_5">
                                    <div @onclick="@(e => _chatdialog4!.ToggleAsync())" class="row-layout group_6">
                                        <img src="assets/pencil-edit-02.svg" class="image_1" />
                                        <p class="typography__body-1 text">
                                            New chat
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <IgbDialog CloseOnOutsideClick="true" @ref="_group4">
                                <h5 slot="title">
                                    Create a Group
                                </h5>
                                <div class="column-layout group_7">
                                    <IgbInput Placeholder="Space Name" Required="true" Outlined="false" class="input" favourites-scope>
                                        <span slot="prefix">
                                            <span class="material-icons icon">
                                                add_reaction
                                            </span>
                                        </span>
                                        <span slot="helper-text">0/150</span>
                                    </IgbInput>
                                </div>
                                <div slot="footer">
                                    <IgbButton @onclick="@(e => _group4!.ToggleAsync())" class="button button_5" favourites-scope>
                                        Cancel
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                    <IgbButton Variant="ButtonVariant.Outlined" @onclick="@(e => Navigate("/chat_pages/new_convo_group"))" class="button_1 button_1_1" favourites-scope>
                                        Create Group
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                </div>
                            </IgbDialog>
                            <div class="column-layout group_8">
                                <div @onclick="@(e => Navigate("/chat_pages/home_view"))" class="row-layout group_9">
                                    <img src="assets/home-03.svg" class="image_2" />
                                    <p class="typography__body-2 text_1">
                                        Home
                                    </p>
                                </div>
                                <div @onclick="@(e => Navigate("/chat_pages/mentions"))" class="row-layout group_10">
                                    <img src="assets/a0247e3802210bf84e7dea58490eaea19af36379.SVG" class="image_3" />
                                    <p class="typography__body-2 text_1">
                                        Mentions
                                    </p>
                                </div>
                                <div @onclick="@(e => Navigate("/chat_pages/favourites"))" class="row-layout group_11">
                                    <img src="assets/star.svg" class="image_2" />
                                    <p class="typography__body-2 text_1">
                                        Favorites
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="column-layout group_12">
                            <IgbButton Variant="ButtonVariant.Flat" @onclick="@ToggleGroupVisible4" class="button_2 button_2_1" favourites-scope>
                                <span class="material-icons icon_1">
                                    arrow_drop_down
                                </span>
                                <span>Direct Messages</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            @if (_groupVisible4)
                            {
                                <div @onclick="@(e => Navigate("/chat_pages/new_convo"))" class="row-layout group_13">
                                    <div class="row-layout profile-user"></div>
                                    <p class="typography__body-2 text_1">
                                        J Joshua
                                    </p>
                                </div>
                            }
                        </div>
                        <div class="column-layout group_14">
                            <IgbButton Variant="ButtonVariant.Flat" @onclick="@ToggleGroupVisible5" class="button_3 button_3_1" favourites-scope>
                                <span class="material-icons icon_1">
                                    arrow_drop_down
                                </span>
                                <span>Groups</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            @if (_groupVisible5)
                            {
                                <div @onclick="@(e => Navigate("/chat_pages/new_convo_group"))" class="row-layout group_13">
                                    <div class="row-layout profile-user"></div>
                                    <p class="typography__body-2 text_1">
                                        Marketing CTO
                                    </p>
                                </div>
                            }
                        </div>
                    </div>
                </IgbNavDrawer>
                <span @onclick="@(e => _navDrawer12!.ToggleAsync())" class="material-icons icon">
                    menu
                </span>
            </div>
            <div @onclick="@(e => Navigate("/dashboard/search_engine"))" class="row-layout group_1">
                <img src="assets/gchat monogram.svg" class="image_4" />
            </div>
        </div>
        <div class="row-layout group_15">
            <div class="row-layout group_16">
                <span @onclick="@(e => _overview12!.ToggleAsync())" class="material-icons icon_2">
                    drag_indicator
                </span>
            </div>
            <div class="row-layout group_17">
                <div @onclick="@(e => _profileoverview12!.ToggleAsync())" class="row-layout profile-user-2">
                    <p class="typography__body-1 text_2">
                        Z
                    </p>
                </div>
            </div>
            <IgbDialog CloseOnOutsideClick="true" @ref="_profileoverview12">
                <h5 slot="title"></h5>
                <div class="row-layout group_18">
                    <span @onclick="@(e => _profileoverview12!.ToggleAsync())" class="material-icons icon_3">
                        close
                    </span>
                </div>
                <div class="row-layout group_19">
                    <div class="row-layout group_20"></div>
                    <p class="typography__body-2 text_3">
                        zoe.e@@etztec.com
                    </p>
                    <div class="row-layout group_20"></div>
                </div>
                <div class="column-layout group_21">
                    <div class="row-layout group_22">
                        <div class="row-layout avatar">
                            <p class="typography__body-1 text_2">
                                EG
                            </p>
                            <div class="row-layout circle"></div>
                        </div>
                        <div class="column-layout group_23">
                            <p class="typography__subtitle-1 text_1">
                                Zoe Emmanuel
                            </p>
                            <p class="typography__body-2 text_4">
                                +44 7123 456789
                            </p>
                        </div>
                    </div>
                    <IgbButton Variant="ButtonVariant.Outlined" @onclick="@(e => Navigate("/account/account_home"))" class="button button_6" favourites-scope>
                        Manage your Goowid Account
                        <IgbRipple></IgbRipple>
                    </IgbButton>
                </div>
                <div class="column-layout group_24">
                    <div class="row-layout settings-button-1">
                        <img src="assets/settings-01.svg" class="image_5" />
                        <p class="typography__body-2 content">
                            More Settings
                        </p>
                    </div>
                    <div class="row-layout language-button">
                        <div class="row-layout group_25">
                            <img src="assets/globe-02.svg" class="image_5" />
                            <p class="typography__body-2 text_1">
                                Language
                            </p>
                        </div>
                        <p class="typography__body-2 text_6">
                            English
                        </p>
                    </div>
                    <div class="row-layout settings-button-1">
                        <img src="assets/logout-03.svg" class="image_6" />
                        <p class="typography__body-2 text_1">
                            Log out
                        </p>
                    </div>
                </div>
                <div class="row-layout group_26">
                    <div class="row-layout group_27">
                        <p class="typography__caption content">
                            Privacy Policy
                        </p>
                    </div>
                    <div class="column-layout deivder"></div>
                    <div class="row-layout group_27">
                        <p class="typography__caption content">
                            Terms of Service
                        </p>
                    </div>
                </div>
                <div slot="footer"></div>
            </IgbDialog>
            <IgbDialog CloseOnOutsideClick="true" @ref="_overview12">
                <h5 slot="title"></h5>
                <div class="row-layout group_28">
                    <span @onclick="@(e => _overview12!.ToggleAsync())" class="material-icons icon_3">
                        close
                    </span>
                </div>
                <div class="row-layout group_29">
                    <img src="assets/goowid-logo.svg" @onclick="@(e => Navigate("/dashboard/homepage"))" class="image_7" />
                </div>
                <div class="row-layout group_30">
                    <div @onclick="@(e => Navigate("/dashboard/search_engine"))" class="column-layout category-2">
                        <div class="row-layout group_31">
                            <img src="assets/searchengine_icon.svg" class="image_8" />
                        </div>
                        <div class="row-layout group_32">
                            <p class="typography__body-2 text_7">
                                Search
                            </p>
                        </div>
                    </div>
                    <div @onclick="@(e => Navigate("/dashboard/search"))" class="column-layout category-2">
                        <div class="row-layout group_31">
                            <img src="assets/AIsearch.svg" class="image_8" />
                        </div>
                        <div class="row-layout group_32">
                            <p class="typography__body-2 text_7">
                                AI Assist
                            </p>
                        </div>
                    </div>
                    <div @onclick="@(e => Navigate("/dashboard/chat"))" class="column-layout category-2">
                        <div class="row-layout group_31">
                            <img src="assets/Chats.svg" class="image_8" />
                        </div>
                        <div class="row-layout group_32">
                            <p class="typography__body-2 text_7">
                                Chat
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row-layout group_33">
                    <div @onclick="@(e => Navigate("/dashboard/timesheet"))" class="column-layout category-2">
                        <div class="row-layout group_31">
                            <img src="assets/timesheet.svg" class="image_8" />
                        </div>
                        <div class="row-layout group_32">
                            <p class="typography__body-2 text_7">
                                Timesheet
                            </p>
                        </div>
                    </div>
                    <div @onclick="@(e => Navigate("/dashboard/social_media"))" class="column-layout category-4">
                        <div class="row-layout group_31">
                            <img src="assets/Social.svg" class="image_8" />
                        </div>
                        <div class="row-layout group_32">
                            <p class="typography__body-2 text_7">
                                Social Media
                            </p>
                        </div>
                    </div>
                    <div @onclick="@(e => Navigate("/dashboard/banking"))" class="column-layout category-2">
                        <div class="row-layout group_31">
                            <img src="assets/Banking.svg" class="image_8" />
                        </div>
                        <div class="row-layout group_32">
                            <p class="typography__body-2 text_7">
                                Banking
                            </p>
                        </div>
                    </div>
                </div>
                <div slot="footer"></div>
            </IgbDialog>
        </div>
    </div>
    <div class="row-layout group_34">
        <div class="column-layout sidenav">
            <div class="column-layout group_35">
                <div class="column-layout group_36">
                    <div class="row-layout group_37">
                        <div class="row-layout group_38">
                            <img src="assets/pencil-edit-02.svg" @onclick="@(e => _chatdialog4!.ToggleAsync())" class="image_1" />
                        </div>
                    </div>
                </div>
                <IgbDialog CloseOnOutsideClick="true" @ref="_chatdialog4">
                    <h5 slot="title">
                        New Chat
                    </h5>
                    <div class="column-layout group_39">
                        <div class="row-layout group_40">
                            <IgbInput Placeholder="Add 1 or more people" Outlined="true" class="input_1" favourites-scope>
                                <span slot="prefix">
                                    <span class="material-icons icon">
                                        search
                                    </span>
                                </span>
                            </IgbInput>
                        </div>
                        <div class="column-layout group_39">
                            <div class="row-layout group_39">
                                <div @onclick="@(e => _chatdialog4!.ToggleAsync())" class="row-layout settings-button">
                                    <img src="assets/add-circle.svg" @onclick="@(e => _group4!.ToggleAsync())" class="image_5" />
                                    <p @onclick="@(e => _group4!.ToggleAsync())" class="typography__body-2 text_1">
                                        Create a group
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div slot="footer">
                        <IgbButton Variant="ButtonVariant.Outlined" @onclick="@(e => Navigate("/chat_pages/new_convo"))" class="button_4 button_4_1" favourites-scope>
                            start chat
                            <IgbRipple></IgbRipple>
                        </IgbButton>
                    </div>
                </IgbDialog>
                <div class="column-layout group_41">
                    <div class="row-layout group_42">
                        <img src="assets/home-03.svg" @onclick="@(e => Navigate("/chat_pages/home_view"))" class="image_9" />
                    </div>
                    <div class="row-layout group_42">
                        <img src="assets/a0247e3802210bf84e7dea58490eaea19af36379.SVG" @onclick="@(e => Navigate("/chat_pages/mentions"))" class="image_10" />
                    </div>
                    <div class="row-layout group_43">
                        <img src="assets/star.svg" @onclick="@(e => Navigate("/chat_pages/favourites"))" class="image_9" />
                    </div>
                </div>
            </div>
            <div class="column-layout group_44"></div>
        </div>
        <div class="column-layout group_45">
            <div class="row-layout group_46">
                <div class="row-layout group_47">
                    <h5 class="content">
                        Favourites
                    </h5>
                </div>
                <div class="row-layout group_48"></div>
            </div>
            <div @onclick="@(e => Navigate("/chat_pages/new_convo"))" class="row-layout group_49">
                <div class="row-layout group_50">
                    <div class="row-layout group_51">
                        <IgbAvatar Initials="J" Shape="AvatarShape.Rounded" class="avatar_1" favourites-scope></IgbAvatar>
                    </div>
                </div>
                <div class="row-layout group_52">
                    <div class="row-layout group_53">
                        <p class="typography__body-1 text_5">
                            J Joshua
                        </p>
                    </div>
                    <div class="row-layout group_54">
                        <p class="typography__body-1 text_8">
                            Save Sept 20th!
                        </p>
                        <div class="row-layout group_55"></div>
                    </div>
                </div>
                <div class="row-layout group_56">
                    <div class="row-layout group_57">
                        <div class="row-layout group_39">
                            <p class="typography__body-2 text_9">
                                9 min
                            </p>
                        </div>
                        <div class="row-layout group_39">
                            <span class="material-icons icon_4">
                                fiber_manual_record
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IgbNavDrawer _navDrawer12;
    private IgbDialog _group4;
    private bool _groupVisible4 = true;
    private bool _groupVisible5 = true;
    private IgbDialog _profileoverview12;
    private IgbDialog _overview12;
    private IgbDialog _chatdialog4;

    private void ToggleGroupVisible4()
    {
        _groupVisible4 = !_groupVisible4;
    }

    private void ToggleGroupVisible5()
    {
        _groupVisible5 = !_groupVisible5;
    }

    public void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
