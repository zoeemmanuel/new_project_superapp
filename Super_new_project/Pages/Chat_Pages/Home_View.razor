                            <IgbButton Variant="ButtonVariant.Flat" @onclick="@ToggleGroupVisible1" class="button_3 button_3_1" home_view-scope>
                                <span class="material-icons icon_1">
                                    arrow_drop_down
                                </span>
                                <span>Groups</span>
                                <IgbRipple></IgbRipple>
                            </IgbButton>
                            @if (_groupVisible1)
                            {
                                <div @onclick="@(e => Navigate("/chat_pages/new_convo_group"))" class="row-layout group_13">
                                    <div class="row-layout profile-user-1"></div>
                                    <p class="typography__body-2 text_1">
                                        Marketing CTO
                                    </p>
                                </div>
                            }
