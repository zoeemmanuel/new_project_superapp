                                    <IgbButton @onclick="@(e => _group2!.ToggleAsync())" class="button button_6" home_view-scope>
                                        Cancel
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                    <IgbButton Variant="ButtonVariant.Outlined" @onclick="@(e => Navigate("/chat_pages/new_convo_group"))" class="button_1 button_1_1" home_view-scope>
                                        Create Group
                                        <IgbRipple></IgbRipple>
                                    </IgbButton>
                                </div>
                            </IgbDialog>
